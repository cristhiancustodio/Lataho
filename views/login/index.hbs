    <div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header text-center">Iniciar sesión</div>
            <form id="frm-registrar-usuario" method="post">
                <input type="hidden" value="{{usuario.id_usuario}}" name="id_usuario" id="id_usuario">

            {{!-- <form action="/login/registrar-usuario" method="post"> --}}
                <div class="card-body">
                    
                    <div class="row">
                        <div class="col form-floating form-floating-outline mb-6">
                            <input type="text" value="{{usuario.nombre}}" id="nombre" name="nombre"
                            class="form-control" autocomplete="off">
                            <label for="nombre">Nombre</label>
                        </div>
                        <div class="col form-floating form-floating-outline mb-6">
                            <input type="text" value="{{usuario.apellido}}" id="apellido" name="apellido"
                            class="form-control" autocomplete="off">
                            <label for="apellido">Apellido</label>
                        </div>
                        <div class="col form-floating form-floating-outline mb-6">
                            <input type="email" value="{{usuario.correo}}" id="correo" name="correo"
                            class="form-control" autocomplete="off">
                            <label for="correo">Correo</label>
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="col form-floating form-floating-outline mb-6">
                            <select name="idtipo_documento" id="idtipo_documento" class="form-select">
                                <option value="">Seleccione</option>
                                {{#each lista_tipo_documento}}
                                    <option value="{{this.idtipo_documento}}" {{#if (condIf ../usuario.idtipo_documento this.idtipo_documento) }}selected{{/if}}  >{{this.descripcion}}</option>
                                {{/each}}
                            </select>
                            <label for="idtipo_documento">Tipo de documento</label>
                        </div>
                        <div class="col form-floating form-floating-outline mb-6">
                            <input type="text" value="{{usuario.dni}}" id="dni" name="dni"
                            class="form-control" autocomplete="off">
                            <label for="dni">DNI</label>
                        </div>
                        <div class="col form-floating form-floating-outline mb-6">
                            <input type="text" value="{{usuario.telefono}}" id="telefono" name="telefono"
                            class="form-control" autocomplete="off">
                            <label for="telefono">Teléfono</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating form-floating-outline mb-6">
                            <input type="text" value="{{usuario.usuario}}" id="usuario" name="usuario"
                            class="form-control" autocomplete="off">
                            <label for="usuario">Usuario</label>
                        </div>
                        <div class="form-floating form-floating-outline mb-6">
                            <input type="password" value="{{usuario.password}}" id="password" name="password"
                            class="form-control" autocomplete="off">
                            <label for="password">Contraseña</label>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary waves-effect waves-light" type="submit" >Enviar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{#contentFor 'scripts-seccion'}}
    <script type="module" src="/js/login/register.js"></script>
{{/contentFor}}